<div class="row">
	<div class="col-sm-8">
      	<ul class="list-unstyled event-list">
			<%= @events_list.each do |event| %>

				<li class='<%# "finished" if event.finished? %>'>
				  <div class="col-sm-3">
				    <a href="#" target="_blank">
				      <%# image_from_amazon(event.image_id) %>
				    </a>
				    <p class="text-center rating"><strong><%= event.end.date %></strong></p>
				  </div>
				  <div class="col-sm-9">
				    <h3><a href="#"><%= event.summary %></a></h3>
				    <p class="text-muted"><em>Created by <%= event.creator.display_name %></em></p>

				    <div>
				      <p>
				        <%= event.description %>
				      </p>
				    </div>
				  </div>
				</li>
			<% end %>
		</ul>
	</div>
</div>