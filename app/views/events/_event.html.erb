<li class='<%= "finished" if event.finished? %>'>
  <div class="col-sm-3">
    <a href="#" target="_blank">
      <%= image_from_amazon(event.image_id) %>
    </a>
    <p class="text-center rating"><strong><%= event.duration %></strong></p>
  </div>

  <div class="col-sm-9">
    <h3><a href="#"><%= event.title %></a></h3>
    <p class="text-muted"><em>Created by <%= event.author %></em></p>

    <div>
      <p>
        <%= event.description %>
      </p>
    </div>
  </div>
</li>